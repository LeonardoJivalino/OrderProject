@{
    @model IEnumerable<OrderItem.ViewModel.OrdersCustomersViewModel>
}

<p>Order Action Page.</p>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table Example</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <button type="button" class="btn btn-primary" onclick="redirectToPage()">Add New Data</button>

    <script>
        function redirectToPage() {
            window.location.href = '/AddSalesOrder/AddSalesOrder';
        }
    </script>
    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>Action</th>
                <th>Sales Order</th>
                <th>Order Date</th>
                <th>CustomerId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.No</td>
                    <td><button class="btn btn-primary edit-button" data-order-no="@order.OrderNo">Edit</button><button>Delete</button></td>
                    <td>@order.OrderNo</td>
                    <td>@order.OrderDate</td>
                    <td>@order.CustomerName</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

